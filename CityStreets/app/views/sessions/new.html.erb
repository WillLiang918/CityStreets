<h2>Sign In</h2>

<form class="sign-in-form" action="<%= session_url %>" method="post">
  <%= auth_token_input %>

  <label for="user_username">
    Username
    <input
      type="text"
      name="user[username]"
      id="user_username"
  </label>

  <label for="user_password">
    Password
    <input
      type="password"
      name="user[password]"
      id="user_password"
  </label>

  <input type="submit" value="Sign In">
</form>
